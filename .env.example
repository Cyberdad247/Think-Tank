# Backend Server Configuration
APP_HOST="0.0.0.0"
APP_PORT="8000"

# Logging Configuration
LOG_LEVEL="INFO" # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Redis Configuration
# Option 1: Using REDIS_URL (recommended)
REDIS_URL="redis://localhost:6379/0"
# Option 2: Using individual components (if REDIS_URL is not set)
# REDIS_HOST="localhost"
# REDIS_PORT="6379"
# REDIS_DB="0"

# Supabase Configuration
# Ensure these are set if Supabase features are used.
SUPABASE_URL="YOUR_SUPABASE_URL"
SUPABASE_KEY="YOUR_SUPABASE_ANON_KEY" # Or your service role key if appropriate for backend use

# ChromaDB Configuration (Vector Database)
# If CHROMA_PERSIST_PATH is set, ChromaDB will persist data to this directory.
# Otherwise, it will run in-memory (data lost on restart).
# Example: CHROMA_PERSIST_PATH="./chroma_data"
CHROMA_PERSIST_PATH=

# AI Agent Configuration (Example - if you have specific settings for AI agents)
# OPENAI_API_KEY="YOUR_OPENAI_API_KEY"
# ANTHROPIC_API_KEY="YOUR_ANTHROPIC_API_KEY"